<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <act_window
                id="library_book_status_action"
                name="Library Book Status"
                res_model="library.book.status"
                target="new"
                view_mode="form"
        />


        <menuitem id="library_books_status" name="Book Status"
                  action="library_book_status_action" parent="library_books_main_menu" sequence="5"/>

        <record id="library_book_cat_view_form" model="ir.ui.view">
            <field name="name">Library Book Status Form</field>
            <field name="model">library.book.status</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <field name="book_ids"/>
                    </group>

                    <footer>
                          <button name="toggle_availability" string="Toggle Availability" type="object" class="oe_highlight"/>
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

    </data>
</openerp>