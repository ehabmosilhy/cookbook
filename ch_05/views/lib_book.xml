<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <act_window
                id="library_book_action"
                name="Library Books"
                res_model="library.book"
        />


        <menuitem id="library_book_menu" name="Library"
                  action="" parent="" sequence="5"/>

        <menuitem id="library_books_main_menu" name="Books"
                  action="" parent="library_book_menu" sequence="5"/>

        <menuitem id="library_books_operations" name="Books Operations"
                  action="library_book_action" parent="library_books_main_menu" sequence="5"/>



        <record id="library_book_view_form" model="ir.ui.view">
            <field name="name">Library Book Form</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="short_name"/>
                            <field name="notes"/>
                            <field name="description"/>

                        </group>
                        <group>
                            <field name="author_ids"/>
                            <field name="state"/>
                            <field name="cover"/>
                            <field name="out_of_print"/>
                            <field name="date_release"/>
                            <field name="reader_rating"/>
                            <field name="pages"/>
                            <field name="cost_price"/>
                            <field name="active" invisible="1"/>
                        </group>
                    </group>
                    <group>
                        <group>
                            <field name="publisher"/>
                            <field name="publisher_city"/>
                            <field name="hours_to_read"/>


                        </group>
                        <group>
                            <field name="ref_doc_id"/>
                        </group>
                        <group></group>
                    </group>


                </form>
            </field>
        </record>


        <record id="library_book_view_tree" model="ir.ui.view">
            <field name="name">Library Book List</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <tree colors="red:state==False">
                    <field name="name"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>


        <record id="library_book_view_search" model="ir.ui.view">
            <field name="name">Library Book Search</field>
            <field name="model">library.book</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="author_ids"/>
                    <filter string="No Authors"
                            domain="[('author_ids','=',False)]"/>
                </search>
            </field>
        </record>


    </data>
</openerp>